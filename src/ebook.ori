# This Origami file defines the tree of files necessary for the EPUB format.
@merge(
  # Files that don't depend on the book metadata or the stories
  boilerplate

  # Files that do depend on the book metadata or the stories
  {
    EPUB = {
      index.xhtml = index.ori(markdown, book.yaml)
      nav.xhtml = nav.ori(markdown)
      package.opf = package.ori(book.yaml)
    }
  }
)
