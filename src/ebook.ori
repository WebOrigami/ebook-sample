# This Origami file defines the tree of files necessary for the EPUB format.
@merge(
  # Files that don't depend on the book metadata or the stories
  boilerplate

  # Files that do depend on the book metadata or the stories
  {
    EPUB = {
      images = @map(content/images, @image/resize({ width: 1200 }))
      index.xhtml = index.ori(content/markdown, content/book.yaml)
      nav.xhtml = nav.ori(content/markdown)
      package.opf = package.ori(content/book.yaml)
    }
  }
)
